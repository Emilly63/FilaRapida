using System;
using System.Drawing;
using System.Linq;
using System.Windows.Forms;
using FilaRapida.Models;
using FilaRapida.Repositories;

namespace FilaRapida.Forms
{
    public partial class frmProdutos : Form
    {
        private readonly ProdutoRepository produtoRepo;
        private readonly Usuario usuarioLogado;
        private bool apenasAtivos = true;
        
        public frmProdutos(Usuario usuario)
        {
            InitializeComponent();
            produtoRepo = new ProdutoRepository();
            usuarioLogado = usuario;
            ConfigurarInterface();
            CarregarProdutos();
        }
        
        private void ConfigurarInterface()
        {
            dgvProdutos.AutoGenerateColumns = false;
            dgvProdutos.SelectionMode = DataGridViewSelectionMode.FullRowSelect;
            
            bool isAdmin = usuarioLogado.Perfil == "ADMIN";
            btnNovo.Enabled = isAdmin;
            btnEditar.Enabled = isAdmin;
            btnInativar.Enabled = isAdmin;
            btnReativar.Enabled = isAdmin;
            
            if (!isAdmin)
            {
                MessageBox.Show("Apenas administradores podem gerenciar produtos", 
                    "Acesso restrito", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
        }
        
        private void CarregarProdutos()
        {
            try
            {
                Cursor.Current = Cursors.WaitCursor;
                
                var produtos = apenasAtivos 
                    ? produtoRepo.GetAll(true)
                    : produtoRepo.GetAll(false);
                
                dgvProdutos.DataSource = produtos;
                
                lblTotal.Text = $"Total: {produtos.Count} produto(s)";
                lblFiltro.Text = apenasAtivos ? "Mostrando apenas ativos" : "Mostrando todos";
            }
            catch (Exception ex)
            {
                MessageBox.Show($"Erro ao carregar produtos: {ex.Message}", 
                    "Erro", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
            finally
            {
                Cursor.Current = Cursors.Default;
            }
        }
        
        private void btnNovo_Click(object sender, EventArgs e)
        {
            var formCadastro = new frmCadastroProduto(null);
            if (formCadastro.ShowDialog() == DialogResult.OK)
            {
                CarregarProdutos();
                MessageBox.Show("Produto cadastrado com sucesso!", "Sucesso", 
                    MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
        }
        
        private void btnEditar_Click(object sender, EventArgs e)
        {
            if (dgvProdutos.SelectedRows.Count == 0)
            {
                MessageBox.Show("Selecione um produto para editar", "Aviso", 
                    MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }
            
            var produto = dgvProdutos.SelectedRows[0].DataBoundItem as Produto;
            if (produto == null) return;
            
            var formCadastro = new frmCadastroProduto(produto);
            if (formCadastro.ShowDialog() == DialogResult.OK)
            {
                CarregarProdutos();
                MessageBox.Show("Produto atualizado com sucesso!", "Sucesso", 
                    MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
        }
        
        private void btnInativar_Click(object sender, EventArgs e)
        {
            if (dgvProdutos.SelectedRows.Count == 0)
            {
                MessageBox.Show("Selecione um produto para inativar", "Aviso", 
                    MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }
            
            var produto = dgvProdutos.SelectedRows[0].DataBoundItem as Produto;
            if (produto == null) return;
            
            if (!produto.Ativo)
            {
                MessageBox.Show("Este produto já está inativo", "Aviso", 
                    MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }
            
            var confirm = MessageBox.Show($"Tem certeza que deseja inativar o produto '{produto.Nome}'?\n\n" +
                "Produtos inativados não aparecerão para vendas, mas permanecerão no histórico.", 
                "Confirmar inativação", MessageBoxButtons.YesNo, MessageBoxIcon.Question);
            
            if (confirm == DialogResult.Yes)
            {
                try
                {
                    bool sucesso = produtoRepo.Inactivate(produto.Id);
                    if (sucesso)
                    {
                        CarregarProdutos();
                        MessageBox.Show("Produto inativado com sucesso!", "Sucesso", 
                            MessageBoxButtons.OK, MessageBoxIcon.Information);
                    }
                }
                catch (Exception ex)
                {
                    MessageBox.Show($"Erro ao inativar produto: {ex.Message}", 
                        "Erro", MessageBoxButtons.OK, MessageBoxIcon.Error);
                }
            }
        }
        
        private void btnReativar_Click(object sender, EventArgs e)
        {
            if (dgvProdutos.SelectedRows.Count == 0)
            {
                MessageBox.Show("Selecione um produto para reativar", "Aviso", 
                    MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }
            
            var produto = dgvProdutos.SelectedRows[0].DataBoundItem as Produto;
            if (produto == null) return;
            
            if (produto.Ativo)
            {
                MessageBox.Show("Este produto já está ativo", "Aviso", 
                    MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }
            
            var confirm = MessageBox.Show($"Deseja reativar o produto '{produto.Nome}'?", 
                "Confirmar reativação", MessageBoxButtons.YesNo, MessageBoxIcon.Question);
            
            if (confirm == DialogResult.Yes)
            {
                try
                {
                    bool sucesso = produtoRepo.Reactivate(produto.Id);
                    if (sucesso)
                    {
                        CarregarProdutos();
                        MessageBox.Show("Produto reativado com sucesso!", "Sucesso", 
                            MessageBoxButtons.OK, MessageBoxIcon.Information);
                    }
                }
                catch (Exception ex)
                {
                    MessageBox.Show($"Erro ao reativar produto: {ex.Message}", 
                        "Erro", MessageBoxButtons.OK, MessageBoxIcon.Error);
                }
            }
        }
        
        private void btnAtualizar_Click(object sender, EventArgs e)
        {
            CarregarProdutos();
        }
        
        private void btnFechar_Click(object sender, EventArgs e)
        {
            this.Close();
        }
        
        private void txtBuscar_TextChanged(object sender, EventArgs e)
        {
            if (string.IsNullOrWhiteSpace(txtBuscar.Text))
            {
                CarregarProdutos();
                return;
            }
            
            try
            {
                var produtos = produtoRepo.SearchByName(txtBuscar.Text, apenasAtivos);
                dgvProdutos.DataSource = produtos;
                lblTotal.Text = $"Encontrados: {produtos.Count} produto(s)";
            }
            catch (Exception ex)
            {
                MessageBox.Show($"Erro ao buscar produtos: {ex.Message}", 
                    "Erro", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }
        
        private void chkMostrarTodos_CheckedChanged(object sender, EventArgs e)
        {
            apenasAtivos = !chkMostrarTodos.Checked;
            CarregarProdutos();
        }
        
        private void dgvProdutos_CellFormatting(object sender, DataGridViewCellFormattingEventArgs e)
        {
            if (dgvProdutos.Columns[e.ColumnIndex].Name == "colStatus" && e.Value != null)
            {
                if (e.Value.ToString() == "Ativo")
                {
                    e.CellStyle.ForeColor = Color.Green;
                    e.CellStyle.Font = new Font(dgvProdutos.Font, FontStyle.Bold);
                }
                else
                {
                    e.CellStyle.ForeColor = Color.Red;
                }
            }
            
            if (dgvProdutos.Columns[e.ColumnIndex].Name == "colPreco" && e.Value != null)
            {
                if (decimal.TryParse(e.Value.ToString(), out decimal valor))
                {
                    e.Value = valor.ToString("C2");
                    e.FormattingApplied = true;
                }
            }
        }
    }
}